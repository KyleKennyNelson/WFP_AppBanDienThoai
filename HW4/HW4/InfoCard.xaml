<UserControl x:Class="HW4.InfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name ="infoCard">
    <Border Margin="10 0" Style="{StaticResource whiteBorder}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ElementName=infoCard, Path=Image}" Width="30" Height="30" Margin="0 0 10 0"/>
                <TextBlock Text="{Binding ElementName=infoCard, Path=Title}" Style="{StaticResource titleText1}"/>
            </StackPanel>
            <TextBlock Text="{Binding ElementName=infoCard, Path=SubTitle}" Style="{StaticResource titleText2}"/>
            <Slider Style="{DynamicResource SliderStyle1}" x:Name="slider" Margin="0 5 0 0" 
                    IsSelectionRangeEnabled="True" 
                    Value="{Binding ElementName=infoCard, Path=Amount}" 
                    SelectionEnd="{Binding ElementName=slider, Path=Value}"/>
        </StackPanel>
    </Border>
</UserControl>
