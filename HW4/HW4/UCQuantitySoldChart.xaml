<UserControl x:Class="HW4.UCQuantitySoldChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <lvc:CartesianChart Name="QuantitySoldchart" LegendLocation="Bottom"
                        Series="{Binding SeriesCollection}"
                        Loaded="chart_LoadedSanPhamSoLuong" Width="756" Height="384">
        <lvc:CartesianChart.AxisX>
            <lvc:Axis Title="Biểu đồ báo cáo doanh thu và lợi nhuận của cửa hàng"/>
            <lvc:Axis Labels="{Binding Labels}"/>
        </lvc:CartesianChart.AxisX>
    </lvc:CartesianChart>
</UserControl>
