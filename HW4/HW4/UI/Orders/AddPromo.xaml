<Window x:Class="HW4.UI.Orders.AddPromo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW4.UI.Orders"
        mc:Ignorable="d"
        Title="AddPromo" Height="223" Width="389">
    <Grid>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="20" Content="{Binding OrderID}"></Label>
            <Label FontSize="20" Content="{Binding PhoneName}"></Label>
            <Label Content="Select Customer" FontSize="20" FontFamily="Arial" HorizontalAlignment="Center"/>
            <ComboBox Name="Customer" Height="44" Width="201" DisplayMemberPath="PromoName" ItemsSource="{Binding Promos}" SelectedValue="{Binding SelectedCustomer}"/>
            <Button Height="25" Width="44" HorizontalAlignment="Center" Content="Update" Click="UpdateQuantity" Margin="0, 8, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>
