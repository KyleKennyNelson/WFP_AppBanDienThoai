<UserControl x:Class="HW4.ReportChart"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:local="clr-namespace:HW4"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name ="Chart">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.05*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <lvc:CartesianChart Name="chart" LegendLocation="Bottom" 
                            HorizontalAlignment ="Left" Grid.Row="1"
                            Series="{Binding SeriesCollection}" Margin="0,23,0,3" 
                            Loaded="chart_Loaded" Width="790" Grid.ColumnSpan="5">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Labels="{Binding Labels}" ></lvc:Axis>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>

        <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Choose Date " Margin="0,0,0,5" Width="220" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker Name="startDatePicker" />
                <TextBlock Text="-" Margin="5,0"/>
                <DatePicker Name="endDatePicker"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Click="ChartWithDateButton_Click" Content="Ngày" FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="56"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Click="ChartWithMonthButton_Click" Content="Tháng" FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="56"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Click="ChartWithYearButton_Click" Content="Năm" FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="56"/>
        </StackPanel>
        <StackPanel Grid.Column="4" Grid.Row="0">
            <Button Click="ChartWithYearButton_Click" Content="Doanh thu và lợi nhuận" 
                    Height="25" Width="180" Margin="0 2 0 0" Style="{StaticResource ButtonChoose}"/>
            <Button Click="ChartWithYearButton_Click" Content="Sản phẩm và số lượng" 
                    Height="25" Width="180" Margin="0 4 0 0" Style="{StaticResource ButtonChoose}"/>

        </StackPanel>
        <!--Note-->

        <Grid VerticalAlignment="Bottom" Margin="10 -20" Grid.ColumnSpan="5" Grid.Row="2" HorizontalAlignment="Center">
            <Icon:PackIconMaterial Kind="Information" Foreground="#f96654"/>
            <TextBlock TextWrapping="Wrap" Margin="30 0 0 0" LineHeight="18" Foreground="#b7b7b7" 
               Text="{Binding LegendChart}"/>
        </Grid>
    </Grid>
</UserControl>
